@model MVC_IA.Models.Usuario
@{
    ViewData["Title"] = "Login / Registro";
    Layout = null; // o null si no querés layout
}

<div class="container mt-5">
    <!-- Caja Login -->
    <div id="login-box" class="card p-4 shadow">
        <h2 class="mb-3">Iniciar Sesión</h2>
        <form asp-action="Login" asp-controller="Home" method="post">
            <div class="mb-3">
                <label asp-for="Username" class="form-label">Usuario</label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label">Contraseña</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary w-100">Entrar</button>
        </form>
        <p class="mt-3">
            ¿No tienes cuenta?
            <a href="#" id="show-register">Regístrate</a>
        </p>

        @if (ViewBag.Notification != null)
        {
            <div class="alert alert-danger mt-2">@ViewBag.Notification</div>
        }
    </div>

    <!-- Caja Registro (oculta al inicio) -->
    <div id="register-box" class="card p-4 shadow hidden">
        <h2 class="mb-3">Crear Cuenta</h2>
        <form asp-action="SignUp" asp-controller="Home" method="post">
            <div class="mb-3">
                <label asp-for="Username" class="form-label">Usuario</label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label">Contraseña</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="ConfirmPassword" class="form-label">Repetir Contraseña</label>
                <input id="ConfirmPassword" name="ConfirmPassword" type="password" class="form-control" />
                <span class="text-danger">@ViewBag.ConfirmPasswordError</span>
            </div>
            <button type="submit" class="btn btn-success w-100">Registrarse</button>
        </form>
        <p class="mt-3">
            ¿Ya tienes cuenta?
            <a href="#" id="show-login">Inicia Sesión</a>
        </p>

        @if (ViewBag.Notification != null)
        {
            <div class="alert alert-danger mt-2">@ViewBag.Notification</div>
        }
    </div>
</div>

<!-- Importar tu script -->
<script src="~/js/Login&RegistroScript.js"></script>

<!-- Estilo extra para ocultar -->
<style>
    .hidden {
        display: none;
    }
</style>
