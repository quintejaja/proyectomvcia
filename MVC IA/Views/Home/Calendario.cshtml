@{
    ViewData["Title"] = "Calendario";
    Layout = null;
}

    <title>Programar Servicio</title>
    <link rel="stylesheet" href="styles.css">
    <link rel="stylesheet" href="~/css/Calendario.css">



    <main class="schedule-container">
        <div class="schedule-header">
       
        <a asp-controller="Home" asp-action="Servicios" class="back-link">
            < Volver
        </a>
            <h1>Programa tu servicio</h1>
            <p>Revisa nuestra disponibilidad y reserva la fecha y hora que más te convengan</p>
        </div>

        <div class="schedule-grid">
            <div class="calendar-section">
                <h3>Selecciona fecha y hora</h3>
                <p class="timezone-text">hora estándar de Argentina (ART)</p>

                <div class="calendar-header">
                    <button class="nav-button" id="prevMonth">&lt;</button>
                    <h4 id="currentMonthYear"></h4>
                    <button class="nav-button" id="nextMonth">&gt;</button>
                </div>

                <div class="calendar-grid-days">
                    <span>dom</span><span>lun</span><span>mar</span><span>mié</span><span>jue</span><span>vie</span><span>sáb</span>
                </div>
                <div class="calendar-grid" id="calendarGrid">
                </div>
            </div>

        <div class="time-slots-section">
            <p id="timeSlotsDate">Disponibilidad para:</p>
            <div class="time-slots-grid" id="timeSlotsGrid">
            </div>
        </div>

        <div class="service-details-section">
            <h3>Detalles del servicio</h3>
                      
                <div class="details-content" id="selectedDateTime">

                </div>

                <button class="next-button" id="nextButton" disabled>Siguiente</button>
            
        </div>
   


        </div>
    </main>

    <script src="~/js/Calendario.js"></script>
    
