@model MVC_IA.Models.ReservaConfirmacionViewModel

@{
    ViewData["Title"] = "Confirmar Reserva";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg p-4">
                <h1 class="card-title text-success mb-4">✅ Confirma tu Reserva</h1>
                <p class="lead">Estás a un paso de asegurar tu cita con un técnico.</p>
                <hr />

                <div class="alert alert-info" role="alert">
                    <h4 class="alert-heading">Detalles de tu Cita</h4>
                    <p>
                        <i class="bi bi-calendar-check-fill"></i>
                        **Día:** @Model.FechaDisplay
                    </p>
                    <p>
                        <i class="bi bi-clock-fill"></i>
                        **Hora:** @Model.HoraDisplay (Hora de inicio)
                    </p>
                    <p>
                        <i class="bi bi-person-circle"></i>
                    <p><strong>Técnico:</strong> Se te asignará un técnico disponible.</p>
                    </p>
                </div>
                <form asp-action="ConfirmarReserva" method="post">

                    <div asp-validation-summary="All" class="text-danger"></div>

                    <input type="hidden" asp-for="FechaHoraCita" />

                    <div class="mb-4">
                        <label asp-for="DescripcionProblema" class="form-label fs-5">
                            Describe brevemente tu problema (Máx. 250 caracteres):
                        </label>
                        <textarea asp-for="DescripcionProblema" class="form-control" rows="3" maxlength="250" required
                                  placeholder="Ej: La computadora no enciende y emite un pitido constante."></textarea>
                        <span asp-validation-for="DescripcionProblema" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success btn-lg">
                            Confirmar y Agendar Cita
                        </button>
                        <a asp-action="Calendario" asp-controller="Home" class="btn btn-outline-secondary">
                            Cambiar Fecha/Hora
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}